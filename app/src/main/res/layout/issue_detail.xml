<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/toolbarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_detail"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:theme="@style/ThemeOverlay.AppCompat.ActionBar"/>

    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbarLayout">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:context=".IssueActivity">

            <ImageView
                android:id="@+id/issueImageDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"/>

            <TextView
                android:id="@+id/statusDetail"
                style="@style/TextAppearance.AppCompat.Headline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/issueImageDetail"
                android:padding="8dp"
                android:text="@string/title_placeholder"
                android:theme="@style/ThemeOverlay.AppCompat.Dark" />

            <TextView
                android:id="@+id/pointsDetail"
                style="@style/TextAppearance.AppCompat.Subhead"
                android:textColor="?android:textColorSecondary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/issueImageDetail"
                android:paddingStart="16dp"
                android:paddingLeft="16dp"
                android:paddingTop="16dp"
                android:text="42069"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/likes_string"
                style="@style/TextAppearance.AppCompat.Subhead"
                android:textColor="?android:textColorSecondary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/issueImageDetail"
                android:layout_toRightOf="@id/pointsDetail"
                android:paddingTop="16dp"
                android:paddingLeft="5dp"
                android:text="Likes" />

            <TextView
                android:id="@+id/separator1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/issueImageDetail"
                android:layout_toRightOf="@id/likes_string"
                android:paddingTop="16dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="·" />

            <TextView
                android:id="@+id/dateDetail"
                style="@style/TextAppearance.AppCompat.Subhead"
                android:textColor="?android:textColorSecondary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/issueImageDetail"
                android:layout_toRightOf="@id/separator1"
                android:paddingTop="16dp"
                android:text="@string/date_placeholder" />

            <TextView
                android:id="@+id/separator2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/issueImageDetail"
                android:layout_toRightOf="@id/dateDetail"
                android:paddingTop="16dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="·" />

            <TextView
                android:id="@+id/locDetail"
                style="@style/TextAppearance.AppCompat.Subhead"
                android:textColor="?android:textColorSecondary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/issueImageDetail"
                android:layout_toRightOf="@id/separator2"
                android:paddingTop="16dp"
                android:text="@string/loc_placeholder"/>

            <TextView
                android:id="@+id/infoDetail"
                style="@style/TextAppearance.AppCompat.Subhead"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/dateDetail"
                android:padding="16dp"
                android:text="@string/detail_placeholder"/>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>