<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:layout_constrainedHeight="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/issueImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true" />

        <TextView
            android:id="@+id/title"
            style="@style/TextAppearance.AppCompat.Headline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/issueImage"
            android:padding="8dp"
            android:text="@string/title_placeholder"
            android:theme="@style/ThemeOverlay.AppCompat.Dark" />

        <TextView
            android:id="@+id/loc"
            style="@style/TextAppearance.AppCompat.Subhead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/date"
            android:layout_alignRight="@id/date"
            android:paddingRight="8dp"
            android:text="@string/loc_placeholder"
            android:textColor="?android:textColorSecondary" />

        <TextView
            android:id="@+id/status"
            style="@style/TextAppearance.AppCompat.Subhead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/issueImage"
            android:padding="8dp"
            android:text="@string/status_placeholder"
            android:textColor="?android:textColorSecondary" />

        <TextView
            android:id="@+id/points"
            style="@style/TextAppearance.AppCompat.Subhead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/status"
            android:paddingLeft="8dp"
            android:text="42069"
            android:textColor="?android:textColorSecondary" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextAppearance.AppCompat.Subhead"
            android:textColor="?android:textColorSecondary"
            android:layout_below="@id/status"
            android:layout_toRightOf="@id/points"
            android:paddingLeft="5dp"
            android:paddingStart="5dp"
            android:text="Likes" />

        <TextView
            android:id="@+id/date"
            style="@style/TextAppearance.AppCompat.Subhead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/issueImage"
            android:layout_alignRight="@id/issueImage"
            android:padding="8dp"
            android:text="@string/date_placeholder"
            android:textColor="?android:textColorSecondary" />

        <TextView
            android:id="@+id/detail"
            style="@style/TextAppearance.AppCompat.Subhead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/loc"
            android:padding="8dp"
            android:maxLines="1"
            android:text="@string/detail_placeholder" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>
