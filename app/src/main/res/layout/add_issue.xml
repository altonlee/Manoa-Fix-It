<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/image_placeholder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp"
        android:adjustViewBounds="true"
        android:contentDescription="@string/form_image" />

    <TextView
        android:id="@+id/title_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/image_placeholder"
        android:padding="12dp"
        android:text="@string/form_title"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/title_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/title_label"
        android:layout_toRightOf="@id/title_label"
        android:layout_below="@id/image_placeholder"
        android:hint="@string/form_title_hint"
        android:inputType="text"
        android:padding="12dp"/>

    <TextView
        android:id="@+id/loc_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_label"
        android:padding="12dp"
        android:text="@string/form_loc"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/loc_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_label"
        android:layout_toEndOf="@id/loc_label"
        android:layout_toRightOf="@id/loc_label"
        android:hint="@string/form_loc_hint"
        android:inputType="text"
        android:padding="12dp" />

    <TextView
        android:id="@+id/date_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/loc_label"
        android:padding="12dp"
        android:text="@string/form_date"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/date_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/loc_label"
        android:layout_toEndOf="@id/date_label"
        android:layout_toRightOf="@id/date_label"
        android:hint="@string/form_date_hint"
        android:inputType="date"
        android:padding="12dp" />

    <TextView
        android:id="@+id/info_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/date_label"
        android:padding="12dp"
        android:text="@string/form_info"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/info_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/date_label"
        android:layout_toEndOf="@id/info_label"
        android:layout_toRightOf="@id/info_label"
        android:hint="@string/form_info_hint"
        android:inputType="textMultiLine"
        android:padding="12dp" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:text="@string/submit_label" />
</RelativeLayout>